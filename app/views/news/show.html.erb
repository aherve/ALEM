<div class='row' style="padding-left:30px;">
  <h1><%= @actu.title %></h1>
  <h3><%= I18n.l(@actu.date,format: :long) %></h3>
</div>

<div class='row'>
  <div class='col-md-6' style='padding-top:50px;'>
    <%= image_tag @actu.img.url unless @actu.img.url.blank? %>
    <%= raw @actu.content %>
  </div>
  <div class='col-md-6'>
    <% unless (add = @actu.address).blank? %>
      <h3><%= add %></h3>
      <%= gmaps_iframe(add)%>
    <% end %>
  </div>
</div>
