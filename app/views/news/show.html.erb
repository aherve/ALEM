<%= title @actu.title %>
<div class='row' style="padding-left:30px;">
  <h1><%= @actu.title %></h1>
  <h3><%= I18n.l @actu.date %></h3>
</div>

<div class='row'>
  <div class='col-md-6' style='padding-top:50px;'>
    <%= raw @actu.content %>
  </div>
  <div class='col-md-6'>
    <% unless (add = @actu.address).blank? %>
      <%= gmaps_iframe(add)%>
      <h3><%= add %></h3>
    <% end %>
  </div>
</div>
